<h1>看板列表</h1>

<table class="table table-sm">
  <thead>
    <th scope="col" class="">文章名稱</th>
    <th scope="col" class=""></th>
    <th scope="col" class=""></th>
  </thead>

  <tbody>
      <% @boards.each do |board|%> 
    <tr>
      <td class=""><%= link_to board.title, board_path(board) %></td>
      <%# byebug %>
      <td><%= link_to '編輯', edit_board_path(board) %></td>
      <td><%= link_to '刪除', board_path(board), method: 'delete', data: { confirm: '確認刪除?' } %></td>
    </tr>
    <% end %> 
  </tbody>
</table>

