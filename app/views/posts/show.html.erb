<section class="post">
<ul class="header">
  <li>
    <div>
      <span>作者</span>
      <span><%= @post.display_author %></span>
    </div>
  </li>
  <li>
    <div>
      <span>看板</span>
      <span><%= @post.board.title %></span>
    </div>
  </li>
  <li>
    <span>標題</span>
    <span><%= @post.title %></span>
  </li>
  <li>
    <span>序號</span>
    <span><%= @post.serial %></span>
  </li>
  <li>
    <span>時間</span>
    <span><%= @post.created_at %></span>
  </li>
</ul>
<hr>

<p><%= @post.content %></p>
</section>
<hr>
<div class="main-comment-title justify-content-center">
  <b>留言區</b>
</div>

<div class="main-show-comment justify-content-center">
  <% @comments.each do |comment| %>
      <i><%= comment.id %></i>
    <i><%= comment.content %></i><br>
  <% end %>
</div>

<div class="main-create-comment justify-content-center">
  <%= form_with(model:@comment, url: post_comments_path(@post)) do |f| %>
    <%= f.text_field :content, placeholder: "請輸入您的留言" %>
    <%= f.submit "送出" %>
  <% end %>
</div>



<div class="main-link justify-content-center my-5">
  <%= link_to "返回#{@post.board.title}看板", board_path(@post.board.id) %>
</div>